<!--
  sitemap.xmap defines RiverRun additions to default EPerson aspect
-->

<!--
  This aspect uses XSL stylesheets to add simple, always-on options
  to the Account options block generated by DSpace's EPerson aspect.
-->
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
    <map:pipelines>
        <map:pipeline>
            <map:generate/>
            <map:transform src="add-account-options.xsl"/>
            <map:serialize type="xml"/>
        </map:pipeline>
    </map:pipelines>
</map:sitemap>